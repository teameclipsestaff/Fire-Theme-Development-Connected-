
<style>
  header{
  position: relative;
  height: 100px;
  width: 100%;
}
header .wrapper{
  width: 80%;
  margin: auto;
  display: flex;
}
header .wrapper .logo-container{
  flex: 1;
}
header .wrapper .logo-container a{
  color: var(--header-link-clr);
  text-decoration: none;
}

header .wrapper .menu-container{
  flex: 1;
  margin-top: 10px;
}
header .wrapper .menu-container ul{
  list-style: none;
  display: flex;
  justify-content: space-around;
}
header .wrapper .menu-container ul li a{
  text-decoration: none;
  color: var(--header-link-clr);
}

header .wrapper .cart{
  position: fixed;
  top: 0;
  right: 2rem;
  font-size: 1rem;
  background-color: #000000;
  padding: 16px 1rem;
  border-radius: 16px;
  border-top-left-radius: 0px;
  border-top-right-radius: 0px;
  z-index: 999;
}
header .wrapper .cart a{
  text-decoration: none;
  color: #ffffff;
}
  .ham-icon{
  display: none;
  }
  @media only screen and (max-width: 1000px) {
  header .wrapper .menu-container{
    position: fixed;
    height: 100%;
    width: 100%;
    top: 0;
    left: 0;
    background-color: #000000;
    z-index: 998;
    margin-top: 0;
  }
 header .wrapper .menu-container ul{
    flex-direction: column;
  }
  header .wrapper .menu-container ul li a{
    font-size: 30px;
    line-height: 2.0;
    color: #ffffff;
  }
  header .wrapper .cart{
  padding: 16px 2rem;
  display: flex;
  justify-content: space-around;
}
</style>

<header>
      <div class="wrapper">
        <div class="logo-container">
          <a href="/"><h1>AJ Merch</h1></a>
        </div>
        <div class="menu-container">
          <ul>
            {%- for link in section.settings.menu.links -%}
            <li><a href="{{ link.url }}">{{ link.title | escape }}</a></li>
            {%- endfor -%}
          </ul>
        </div>
        <div class="cart">
          <a href="/" class="ham-icon"><i class="fas fa-bars"></i></a>
          <a href="/"><i class="fas fa-shopping-cart"></i> ({{ cart.item_count }})</a>
        </div>
      </div>
    </header>
<script>
  document.querySelector('.menu-btn').addEventListener('click', () => document.querySelector('.main-menu').classList.toggle('show'));
</script>
{% schema %}
{
  "name": "t:sections.header.name",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "t:sections.header.settings.logo.label"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 250,
      "step": 10,
      "default": 100,
      "unit": "t:sections.header.settings.logo_width.unit",
      "label": "t:sections.header.settings.logo_width.label"
    },
    {
      "type": "select",
      "id": "logo_position",
      "options": [
        {
          "value": "middle-left",
          "label": "t:sections.header.settings.logo_position.options__1.label"
        },
        {
          "value": "top-left",
          "label": "t:sections.header.settings.logo_position.options__2.label"
        },
        {
          "value": "top-center",
          "label": "t:sections.header.settings.logo_position.options__3.label"
        }
      ],
      "default": "middle-left",
      "label": "t:sections.header.settings.logo_position.label"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "t:sections.header.settings.menu.label"
    },
    {
      "type": "checkbox",
      "id": "show_line_separator",
      "default": true,
      "label": "t:sections.header.settings.show_line_separator.label"
    },
    {
      "type": "checkbox",
      "id": "enable_sticky_header",
      "default": true,
      "label": "t:sections.header.settings.enable_sticky_header.label",
      "info": "t:sections.header.settings.enable_sticky_header.info"
    }
  ]
}
{% endschema %}
