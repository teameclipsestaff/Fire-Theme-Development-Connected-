{% stylesheet %}
footer{
  position: relative;
  min-height: 50vh;
  background-color: #000000;
}
footer .wrapper{
  width: 80%;
  margin: auto;
}
footer .wrapper .newsletter-form{
  text-align: center;
  min-height: 200px;
  border-bottom: 1px solid #ffffff;
  padding-top: 20px
}
footer .wrapper .newsletter-form h1{
  color: #ffffff;
}
footer .wrapper .newsletter-form form input[type=email]{
  padding: 10px 20px;
  border: 0px;
  height: 50px;
  width: 300px;
}
footer .wrapper .newsletter-form form button[type=submit]{
  padding: 10px;
  border: 0px;
  cursor: pointer;
  height: 50px;
}
footer .wrapper .footer-content{
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
}
footer .wrapper .footer-content .content{
  text-align: center;
}
footer .wrapper .footer-content .content h1{
  color: #ffffff;
  font-size: 40px;
}
footer .wrapper .footer-content .content h3{
  color: #ffffff;
  font-size: 25px;
}
footer .wrapper .footer-content .content p{
  color: #ffffff;
}
footer .wrapper .footer-content .content ul{
  list-style: none;
  padding: 0;
}
footer .wrapper .footer-content .content .social{
  list-style: none;
  padding: 0;
}
footer .wrapper .footer-content .content .social li{
  display: inline-block;
  padding: 10px;
}
footer .wrapper .footer-contnet .content .social li a{
  
}
footer .wrapper .footer-content .content ul li a{
  text-decoration: none;
  color: #ffffff;
  font-size: 25px
}
footer .wrapper .footer-copyright{
  padding-top: 20px;
  color: #ffffff;
  text-align: center;
}
@media only screen and (max-width: 1000px) {
  footer .wrapper .footer-content {
    grid-template-columns: 1fr;
  }
  footer .wrapper .footer-content .content{
  padding-bottom: 10px;
  }
}
{% endstylesheet %}

